{
  "name": "semantic-complexity-cli",
  "version": "0.0.5",
  "description": "CLI for semantic complexity analysis and reporting",
  "type": "module",
  "bin": {
    "semantic-complexity": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "analyze": "tsx src/index.ts"
  },
  "keywords": [
    "complexity",
    "semantic",
    "analysis",
    "cli",
    "report"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yscha88/semantic-complexity.git",
    "directory": "packages/cli"
  },
  "dependencies": {
    "semantic-complexity": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "glob": "^11.0.0",
    "ora": "^8.1.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "tsx": "^4.21.0"
  }
}
