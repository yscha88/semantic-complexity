{
  "name": "semantic-complexity",
  "version": "0.0.1",
  "description": "Multi-dimensional code complexity analyzer",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./ast": {
      "types": "./dist/ast/index.d.ts",
      "import": "./dist/ast/index.js"
    },
    "./metrics": {
      "types": "./dist/metrics/index.d.ts",
      "import": "./dist/metrics/index.js"
    },
    "./graph": {
      "types": "./dist/graph/index.d.ts",
      "import": "./dist/graph/index.js"
    },
    "./context": {
      "types": "./dist/context/index.d.ts",
      "import": "./dist/context/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "clean": "rimraf dist",
    "compare": "tsx src/compare.ts",
    "guide": "tsx src/compare.ts --guide"
  },
  "keywords": [
    "complexity",
    "cognitive-complexity",
    "cyclomatic-complexity",
    "semantic",
    "ast",
    "static-analysis"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yscha88/semantic-complexity.git",
    "directory": "packages/core"
  },
  "dependencies": {
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "rimraf": "^6.0.1",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}
